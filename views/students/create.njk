<!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "layout.njk" %}

<!-- Conteúdo do bloco head irá substituir o head no layout.njk -->
{% block head %}
  <title>Novo Estudante - Private Lessons</title>
{% endblock %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}
  <form class="card" method="POST" action="/students">

    <section 
      class="avatar"
      style="background: url('https://source.unsplash.com/collection/517198/500x500') no-repeat center center / cover;   border-radius: 10px 0 0 10px;"></section>

    <section class="details">
      <h3>Novo Estudante</h3>

      {% include 'students/fields.njk' %}

    </section>

  </div>
{% endblock %}