<!-- Extendendo as partes repetidas para o layout.njk -->
{% extends "layout.njk" %}

<!-- Conteúdo do bloco head irá substituir o head no layout.njk -->
{% block head %}
  <title>Teachers - Private Lessons</title>
{% endblock %}

<!-- Conteúdo do bloco content irá substituir o conteúdo no layout.njk -->
{% block content %}
  <div class="card">

    <section 
      class="avatar"
      style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover;   border-radius: 10px 0 0 10px;"></section>

    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
        <div>Nome completo</div>
        <div>{{ teacher.name }}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{ teacher.age }}</div>
      </div>

      <div class="items">
        <div>
          <div>Grau de escolaridade</div>
          <div>{{ teacher.graduation }}</div>
        </div>

        <div>
          <div>Tipo de aula</div>
          <div>{{ teacher.type_class }}</div>
        </div>
      </div>
      
      <div class="item">
        <div>Acompanhamento</div>
        <div>
          {% for field in teacher.fields %}
            <span>{{ field }}</span>
          {% endfor %}
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{ teacher.created_at }}</div>
      </div>

      <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

    </section>

  </div>
{% endblock %}